<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox>
                            <Label id="labelEmployee" labelFor="inputEmpleyee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmpleyee" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="false"/>
                            <Select id="slCountry" forceSelection="false" visible="false" >
                                <items>
                                    <core:Item key="US" text="{i18n>ContryUS}"/>
                                    <core:Item key="UK" text="{i18n>ContryUK}"/>
                                    <core:Item key="ES" text="{i18n>ContryES}"/>
                                </items>
                            </Select>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
